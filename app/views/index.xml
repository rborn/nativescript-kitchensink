<?xml version="1.0" encoding="UTF-8" ?>
<Page loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="{N} KitchenSink"/>
    </Page.actionBar>
	<TabView>
		<TabView.items>
			<TabViewItem title="Layout">
				<TabViewItem.view>
					<ListView id="layoutList" items="{{ layoutItems }}" itemTap="listViewItemTap">
						<ListView.itemTemplate>
							<Label text="{{ title }}" cssClass="title"/>
						</ListView.itemTemplate>
					</ListView>
				</TabViewItem.view>
			</TabViewItem>
			<TabViewItem title="Widgets">
				<TabViewItem.view>
					<ListView id="widgetList" items="{{ widgetItems }}" itemTap="listViewItemTap">
						<ListView.itemTemplate>
							<Label text="{{ title }}" cssClass="title"/>
						</ListView.itemTemplate>
					</ListView>
				</TabViewItem.view>
			</TabViewItem>
			<TabViewItem title="Platform">
				<TabViewItem.view>
					<ListView id="platformList" items="{{ platformItems }}" itemTap="listViewItemTap">
						<ListView.itemTemplate>
							<Label text="{{ title }}" cssClass="title"/>
						</ListView.itemTemplate>
					</ListView>
				</TabViewItem.view>
			</TabViewItem>
		</TabView.items>
	</TabView>
</Page>